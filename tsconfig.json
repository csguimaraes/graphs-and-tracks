{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "baseUrl": "./src",
    "paths": {
      "common": [ "app/modules/common" ],
      "challenges": [ "app/modules/challenges" ],
      "community": [ "app/modules/community" ],
      "assets": [ "src/assets" ]
    }
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "exclude": [
    "old",
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  }
}
